<%= form_with  url: "/merchant/#{@merchant.id}/bulk_discounts/#{@bulk_discount.id}", method: :patch, local: true do |form| %>
  <%= form.label :percent %>
  <%= form.number_field :percent, value: @bulk_discount.percent, in: 1..100, :step => 1 %><br/>
  <%= form.label :threshold %>
  <%= form.number_field :threshold, value: @bulk_discount.threshold, :step => 1 %><br/>
  <%= form.hidden_field :merchant_id, value: @merchant.id %><br/><br/>
  <%= form.submit 'Submit'%>
<% end %>