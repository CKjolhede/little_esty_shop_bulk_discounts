<%= render partial: '/layouts/nav_container.html.erb' %>
<body><br>
<section id = "new_discount">
  <p class='ml-auto co-sm-5'><%= link_to "New Bulk Discount" , "/merchant/#{@merchant.id}/bulk_discounts/new"%></p>
  </section>
  <div class="row">
    <p class='mr-auto col-sm-5'>Bulk Discounts</p>
  </div>
<ul class='ml-auto col-sm-4'>
    <%# <p class='ml-auto col-sm-5'>Bulk Discounts</p> %>
      <p><% @bulk_discounts.each do |discount| %>
    <section id="discounts-<%=discount.id%>" >
            <li><%= link_to "#{discount.percent}% off if #{discount.threshold} items purchased", "/merchant/#{@merchant.id}/bulk_discounts/#{discount.id}", method: :get %> </li>
            <%= button_to "Delete", "/merchant/#{@merchant.id}/bulk_discounts/#{discount.id}", method: :delete %>
    </section></p>
    <% end %>  
  </ul>
  </body>